<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoftStep.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/navy</item>
        <item name="colorSecondaryVariant">@color/navy</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/navy</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item> <!-- Adjust as needed -->

        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>

        <!-- CardView styles -->
        <item name="cardBackgroundColor">@color/navy</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="android:toolbarStyle">@style/Widget.AppCompat.Toolbar</item>

        <!-- Additional customizations -->
    </style>
</resources>